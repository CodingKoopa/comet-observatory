# shellcheck source=scripts/bash/common.sh
. "$CO"/scripts/bash/common.sh

check_user true

echo powersave | tee /sys/devices/system/cpu/cpu*/cpufreq/scaling_governor

# Disable turbo boost.
echo 1 >/sys/devices/system/cpu/intel_pstate/no_turbo
