# This script sets environment variables for graphical applications. This can be used both for X and
# Wayland. See /docs/Init.md.

# Set the desktop environment variable for xdg-open integration.
export DE=kde
# Use the XDG portal for GTK applications. This allows for things like Firefox (GTK) using KDE file
# dialogs.
export GTK_USE_PORTAL=1
# Disable the Wine menu builder, to prevent creation of desktop entries for Windows programs, Mono,
# to prevent the Mono installation dialog, and Gecko, to prevent the Gecko installation dialog.
export WINEDLLOVERRIDES="winemenubuilder.exe=d;mscoree=d;mshtml=d"
