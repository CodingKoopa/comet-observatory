if [[ $EUID -ne 0 ]]; then
  echo "This script must be run as root."
  exit 1
fi

# shellcheck source=../scripts/efibootmgr/update_efi.sh
source "${BASH_SOURCE%/*}/../scripts/efibootmgr/update_efi.sh"
update-efi "$@"